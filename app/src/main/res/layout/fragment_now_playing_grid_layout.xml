<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/gridLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/imdbPhotoNP"
            app:layout_constraintStart_toStartOf="@id/constraintlay"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewNP"
                android:layout_width="180dp"
                android:layout_height="285dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginRight="15dp"
                android:elevation="0dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/posterViewNP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/empty_backgrounds"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/txtTitleNP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="16dp"

            android:layout_marginBottom="10dp"
            android:background="#751F2B3C"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtDateNP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gridLayout3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDateNP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="deneme"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/imdbPhotoNP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gridLayout3"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleNP" />

        <ImageView
            android:id="@+id/imdbPhotoNP"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="155dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="159dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gridLayout3"
            app:layout_constraintTop_toBottomOf="@+id/txtDateNP" />

        <TextView
            android:id="@+id/txtVoteAvarageNP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="8/10/"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imdbPhotoNP"
            app:layout_constraintTop_toTopOf="@+id/txtDateNP" />
     <LinearLayout
         android:layout_width="200dp"
         android:layout_height="150dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toEndOf="@+id/gridLayout3"
         app:layout_constraintTop_toBottomOf="@+id/txtVoteAvarageNP"
         app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/txtOverViewNP"
                android:layout_width="match_parent"
                android:background="#751F2B3C"
                android:layout_height="match_parent"
                android:text="      Film bilgisi bulunamadÄ± :("
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gridLayout3"
                app:layout_constraintTop_toBottomOf="@+id/txtVoteAvarageNP" />
     </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


